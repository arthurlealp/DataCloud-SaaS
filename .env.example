# Configurações de Ambiente - DataCloud SaaS
# Copie este arquivo para .env e ajuste os valores conforme necessário

# === AMBIENTE ===
ENV=development
DEBUG=True
LOG_LEVEL=INFO

# === BANCO DE DADOS ===
DB_TYPE=sqlite
DB_PATH=data/saas.db
DB_TIMEOUT=30

# === ETL ===
BATCH_SIZE=1000
CACHE_TTL=300

# === DASHBOARD ===
DASHBOARD_TITLE=DataCloud SaaS Analytics
REQUIRE_AUTH=False
PAGE_SIZE=50

# === KPIS E METAS ===
META_RECEITA_MENSAL=60000.00
META_CHURN_MAX=0.05
META_LTV_MINIMO=1000.00

# === SEGURANÇA ===
# IMPORTANTE: Altere esta chave em produção!
SECRET_KEY=change-me-in-production-super-secret-key-2026
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# === DIRECTORIES ===
DATA_DIR=data
LOG_DIR=logs
OUTPUT_PATH=data/relatorio_financeiro.xlsx
